<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".NewActivity">

    <EditText
        android:id="@+id/ysName"
        android:layout_width="230dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/line4"
        android:cursorVisible="false"
        android:fontFamily="@font/zigle_bold"
        android:gravity="center"
        android:hint="약속 이름을 입력하세요"
        android:imeOptions="actionDone"
        android:lines="1"
        android:maxLength="15"
        android:paddingBottom="10dp"
        android:privateImeOptions="defaultInputmode=korean"
        android:singleLine="true"
        android:textColor="@color/colorGray"
        android:textColorHint="@color/colorGrayLight"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/ysDate"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbackgroundsky"
            android:fontFamily="@font/zigle_bold"
            android:foreground="@drawable/buttondate"
            android:text="      날짜선택"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ysPlace"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbackgroundsky"
            android:fontFamily="@font/zigle_bold"
            android:foreground="@drawable/buttonlocation"
            android:text="      장소 선택"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ysPenalty"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbackgroundsky"
            android:fontFamily="@font/zigle_bold"
            android:foreground="@drawable/buttonpenalty"
            android:text="      벌금 선택"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ysAlarm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbackgroundsky"
            android:fontFamily="@font/zigle_bold"
            android:foreground="@drawable/buttonalarm"
            android:gravity="center"
            android:text="       알람 설정"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

        <Button
            android:id="@+id/ysMember"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonbackgroundsky"
            android:fontFamily="@font/zigle_bold"
            android:foreground="@drawable/buttonmember"
            android:text="       멤버 선택"
            android:textColor="@color/colorGray"
            android:textSize="18sp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_Final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="52dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/colorGrayLight2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/colorWhite"
        app:srcCompat="@drawable/checkicon" />

</androidx.constraintlayout.widget.ConstraintLayout>